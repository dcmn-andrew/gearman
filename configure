#!/bin/sh

os=`"${R_HOME}/bin${R_ARCH_BIN}/Rscript" -e "cat(gsub('[-.0-9]','',R.Version()\\$os))"`

echo "OS is $os"

if [ $os = "darwin" ]; then
    cp src/Makevars.osx src/Makevars
    kernel_version=`uname -r | awk -F. '{printf "%d.%d\n",$1,$2}'`
    cp src/osx_config.h.${kernel_version} src/osx_config.h
else
    cp src/Makevars.unix src/Makevars
fi


